@model IEnumerable<Smits.Etg.FileRepositorySystem.Models.Department>
@{
    ViewBag.Title = "listOfEmployeePerDept";
}

<h2>List of employee(s) under @ViewBag.depCode</h2>

<p>
    <button type="button" class="btn btn-danger" onclick="location.href='@Url.Action("Index", "Department")'">
        Back to List
    </button>
</p>
<table class="table">
    <tr>
        <th>
            Name
        </th>
        <th>
            Employee Id
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Code)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
   
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            @foreach (var item2 in item.Employees)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item2.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item2.EmployeeId)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Code)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>

            </tr>
            }

            </tr>

    }

</table>
